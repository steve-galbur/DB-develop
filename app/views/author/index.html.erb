<table border="1">
  <tr>
    <td><b>Book Title</b></td>
    <td><b>Author's Name</b></td>
    <td><b>Author's Title</b></td>
    <td><b>Author's Email</b></td>
    <td><b>Tip</b></td>
  </tr>
  <%@books.each do |book|%>
  <tr>
    <td><%= book.title%></td>
    <td><%= book.author.first_name + ' ' + book.author.last_name %></td>
    <td><%= book.author.title%></td>
    <td><%= book.author.email%></td>
    <td><%= Tippsy::Builder.new(total: rand(99..999), gratuity: 0.25).calculate %></td>
  </tr>
  <%end%>
</table>
<br><br><br><br><br>
<%= @tip%>
<%= author_email(@author) %>